
@{
    ViewData["Title"] = "Index";
    int count = 0;
}

<div class="container">
    <div class="row">
        <div class="col-md-10 mx-auto">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th>Name</th>
                        <th>CostPrice</th>
                        <th>SalePrice</th>
                        <th>AuthorName</th>
                        <th>GenreName</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var book in Model)
                    {
                        count++;
                    <tr>
                        <th scope="row">@count</th>
                        <td>@book.Name</td>
                        <td>@book.CostPrice</td>
                        <td>@book.SalePrice</td>
                        <td>@book.Author.FullName</td>
                        <td>@book.Genre.Name</td>
                    </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>

